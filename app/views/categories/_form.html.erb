<div align="center">

  <% if @category.errors.any? %>
    <h3>The following errors prevented the category from getting created.</h3>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @category do |f| %>
    <p>
      <%= f.label :category %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <%= link_to 'Back to articles listing', articles_path %>

</div>