<div align="center">
  <h1>All Alpha Bloggers</h1>
    <%= will_paginate %>
  <% @users.each do |user| %>
    <div>
      <%= link_to gravatar_for(user), user_path(user) %> <br>
      <%= link_to user.username, user_path(user) %> <br>
      <%= pluralize(user.articles.count, "article") if user.articles %> <br>
      <% if logged_in? and current_user.admin? %>
        <%= link_to 'Delete this user', user_path(user), method: :delete,
                data: { confirm: "Are you sure to delete the user and all their articles?" } %> <br>
      <% end %>
      <br>
    </div>
  <% end %>
  <%= will_paginate %>
</div>